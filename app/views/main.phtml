{
    $html = '<div class="row contributors-row">';

    $alreadyRenderedUsers = array();

    foreach ($users as $user) {
        if (!in_array($user['login'], $alreadyRenderedUsers)) {
            $alreadyRenderedUsers[] = $user['login'];
            $html .= '<a href="' .$user['html_url'] . '" target="_blank" title="' . $user['login'] . '" class="contributors-link"><img src="' . $user['avatar_url'] . '" width="75px"></a>';
        }
    }

    return $html . '</div>';
}

